<div class="side-bar-header">
  <div class = "header-name">
  <% if user_signed_in? %>
    <%= link_to current_user.nickname, user_path(current_user) %>
    </div>
    
    <div class = "create-room">
    <%= link_to "チャットを作成する" , new_room_path %>
    <% else %>
   <%= link_to"新規登録", new_user_registration_path, class:"btn" %>
    <% end %>
  </div>
</div >

<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
       <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>
